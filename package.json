{
  "name": "slug-generator",
  "version": "1.0.0",
  "description": "Transform your string into a beautiful slug for your website!",
  "main": "index.js",
  "scripts": {
    "build": "postcss css/styles.css -o build/styles.css",
    "watch": "watch `npm run build`",
    "start": "nodemon --watch server --exec 'npm run serve'",
    "serve": "browser-sync start --server 'build' --files 'build/**/*.html, build/**/*.css, src/**/*.js'"
  },
  "author": "Pelayo Trives",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.3.5",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "postcss-cli": "^10.1.0"
  }
}
